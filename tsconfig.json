{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "preserveConstEnums": false,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}